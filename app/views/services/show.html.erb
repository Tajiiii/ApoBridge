<h2>サービス詳細</h2>

<%= flash.now[:success] %>

<div class="row">
<div class="col-lg-2">
	<%= attachment_image_tag @service, :image, :fill, 200, 200, fallback: "noimage.jpg", size: "200x200" %>
</div>

<div class="col-lg-8">
	<table class="table"  style="margin-left: 20px;">
		<tr>
			<td>サービス名</td>
			<td><%= @service.name %></td>
		</tr>
		<tr>
			<td>カテゴリー</td>
			<td><%= @service.category.name %></td>
		</tr>
		<tr>
			<td>料金</td>
			<td><%= @service.price %></td>
		</tr>
		<tr>
			<td>対応エリア</td>
			<td><%= @service.area %></td>
		</tr>
		<tr>
			<td>説明</td>
			<td><%= @service.introduction %></td>
		</tr>
		<tr>
			<td></td>
			<td>
				<% if @service.liked_by?(current_user) %>
					<%= link_to service_like_path(@service), method: :delete do %>
						<span class="glyphicon glyphicon-star" aria-hidden="true" style="color: yellow;"></span>
						<%= @service.likes.count %>　いいね
						<% end %>
				<% else %>
						<%= link_to service_likes_path(@service), method: :post do %>
							<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
							<%= @service.likes.count %>　いいね
						<% end %>
				<% end %>
			</td>
		</tr>
	</table>
	<% if user_signed_in? && current_user.id == @service.user_id %>
		<%= link_to "編集する", edit_service_path(@service), class:"btn btn-success" %>
		<%= link_to "削除する", service_path(@service), method: :delete, class:"btn btn-danger" %>
	<% end %>
</div>
<div class="col-lg-2">
	<table class="table">
			<tr>
				<%= attachment_image_tag @service.user, :image, :fill, 200, 200, fallback: "no_profile.jpg", size: "200x200" %>
			</tr>
			<tr>
				<td>名前</td>
				<td><%= @service.user.name %></td>
			</tr>
			<tr>
				<td>会社名</td>
				<td><%= @service.user.company %></td>
			</tr>
			<tr>
				<td>連絡先</td>
				<td><%= @service.user.phonenumber %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @service.user.postcode %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @service.user.address %></td>
			</tr>
	</table>
</div>
</div>