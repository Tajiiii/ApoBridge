<h2>サービス詳細</h2>

<%= flash.now[:success] %>

<div class="row">
<div class="col-lg-2">
	<%= attachment_image_tag @service, :image, :fill, 200, 200, fallback: "noimage.jpg", size: "200x200" %>

	<% if user_signed_in? && current_user.id == @service.user_id %>
		<%= link_to "編集する", edit_service_path(@service), class:"btn btn-success" %><br>
		<%= link_to "削除する", service_path(@service), method: :delete, class:"btn btn-danger" %>
	<% end %>
</div>

<div class="col-lg-8">
	<table class="table"  style="margin-left: 20px;">
		<tr>
			<td>サービス名</td>
			<td><%= @service.name %></td>
		</tr>
		<tr>
			<td>カテゴリー</td>
			<td><%= @service.category.name %></td>
		</tr>
		<tr>
			<td>料金</td>
			<td><%= @service.price %></td>
		</tr>
		<tr>
			<td>対応エリア</td>
			<td><%= @service.area %></td>
		</tr>
		<tr>
			<td>説明</td>
			<td><%= @service.introduction %></td>
		</tr>
		<tr>
			<%= render 'likes/like', service: @service %>
		</tr>
	</table>
	<div class="comment-form" style="margin-left: 20px;">
		<h4>コメント一覧</h4>
			<table class="table">
				<% @service.comments.each do |comment| %>
				<% if user_signed_in? && current_user.id == comment.user.id || current_user.id == @service.user.id %>
					<tr>
						<td><%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
								<%= attachment_image_tag comment.user, :image, fallback: "no_profile.jpg", size: "50x50" %><br>
								<%= comment.user.name %>
							<% end %>
						</td>
						<td><%= comment.content %></td>
					</tr>
				<% end %>
				<% end %>
			</table>


		<h4>コメント</h4>
		<%= form_for ([@service, @comment]) do |f| %>
			<%= f.text_area :content %>
			<%= f.submit "送信" %>
		<% end %>
	</div>

</div>
<div class="col-lg-2">
	<%= render 'users/user_sidebar', user: @service.user %>
</div>
</div>