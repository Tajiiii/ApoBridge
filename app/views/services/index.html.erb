<div class="row">

	<div class="col-lg-3">
		<h3>検索</h3>
		<%= search_form_for @q do |f| %>
			<%= f.label :name, "サービス名" %>
			<!-- "name_cont"はnameカラムの単語の一部分を含むものを検索するという意味 -->
			<%= f.search_field :"name_cont" %>
			<br>
			<%= f.label :area, "対応エリア" %>
			<%= f.search_field :"area_cont" %>
			<br>
			<%= f.label :category_id, "カテゴリー" %>
			<%= f.collection_select :category_id_eq, @categories, :id, :name, :include_blank => '指定なし' %>
			<br>
			<%= f.submit "検索" %>
		<% end %>
	</div>

	<div class="col-lg-8">
		<div class="service-index">
			<h3>サービス一覧</h3>

			<table>

				<tr class="service-box">
					<% @services.each do |service| %>
						<td class="service" style="margin-left: 10px; margin-bottom: 20px; text-align: center;">
								<%= link_to service_path(service) do %>
									<%= attachment_image_tag service, :image, size: "200x200", fallback: "noimage.jpg", size: "200x200" %><br>
									<%= service.name %><br>
									<%= service.category.name %><br>
								<% end %>
								<span class="glyphicon glyphicon-star" style="color: #66FFFF;"></span><%= service.likes.count %>
						</td>
						<td></td>
					<% end %>
				</tr>
			</table>
			<div class="text-center">
				<%= paginate @services %>
			</div>
		</div>
		
	</div>
</div>