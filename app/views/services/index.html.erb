<div class="row">
	<div class="search-form">
		<%= form_with url: "/services", method: :get, local: true do |f| %>
			<div class="field">
				<%= f.text_field :name %>
				<%= f.submit "サービス名検索",  class:"btn btn-default" %> <%= link_to '一覧に戻る', services_path %>
			</div>
		<% end %>
	</div>
</div>

<div class="row">

	<div class="col-lg-3">
		<%= render "services/categories_sidebar", categories: @categories %>
	</div>

	<div class="col-lg-8">
		<div class="service-index">
			<h3>サービス一覧</h3>

			<table>

				<tr class="service-box">
					<% @services.each do |service| %>
						<td class="service" style="margin-left: 10px; margin-bottom: 20px; text-align: center;">
								<%= link_to service_path(service) do %>
									<%= attachment_image_tag service, :image, size: "200x200", fallback: "noimage.jpg", size: "200x200" %><br>
									<%= service.name %><br>
									<%= service.category.name %><br>
								<% end %>
						</td>
					<% end %>
				</tr>
			</table>
			<div class="text-center">
				<%= paginate @services %>
			</div>
		</div>
		
	</div>
</div>