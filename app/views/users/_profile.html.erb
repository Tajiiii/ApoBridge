
<div class="profile-show-image col-lg-12" style="margin-bottom: 20px;">
      <%= attachment_image_tag user, :image, size: "300x300", fallback: "no_profile.jpg", size: "300x300" %>
</div>
<table class="table col-lg-12">
        <tr>
          <td>名前</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>会社名</td>
          <td><%= user.company %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= user.phonenumber %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= user.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= user.address %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= user.email %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= render 'users/follow_form', user: @user %></td>
        </tr>
      </tbody>
    </table>

    <% if user_signed_in? && current_user == user %>
      <div class="col-lg-6 following-count">
        <%= link_to following_user_path(user) do %>
          <strong><%= user.followings.count %></strong>フォロー中
        <% end %>
      </div>
      <div class="col-lg-6 follower-count">
        <%= link_to followers_user_path(user) do %>
          <strong><%= user.followers.count %></strong>フォロー
        <% end %>
      </div>
       <div class="col-lg-12" style="margin-top: 20px;">
        <%= link_to "編集する",edit_user_path(user), class:"btn btn-lg edit-btn" %>
       </div>
    <% end %>