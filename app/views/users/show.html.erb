<div class="row">

	<h3>登録情報</h3>
	<div class="col-lg-4">
		<%= render 'profile', user: @user %>
	</div>
	<div class="col-lg-8">
		<h3>投稿一覧</h3>
		<table class="table">
				<tr>
					<% @services.each do |service| %>
						<td class="service">
								<%= link_to service_path(service) do %>
									<%= attachment_image_tag service, :image, size: "200x200", fallback: "noimage.jpg", size: "200x200" %><br>
									<%= service.name %><br>
									<%= service.category.name %><br>
								<% end %>
						</td>
					<% end %>
				</tr>
			</table>
	

			<h3>いいねしたサービス</h3>
			<table class="table">
				<% current_user.like_services.each do |service| %>
						<tr>
							<td><%= link_to service_path(service) do %>
										<%= attachment_image_tag service, :image, :fill,200, 200, fallback: "noimage.jpg", size: "100x100" %>
										<%= service.name %>
									<% end %></td>
						</tr>
			</table>
				<% end %>


	</div>


</div>