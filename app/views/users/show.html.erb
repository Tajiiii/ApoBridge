<div class="row">
	<h2>マイページ</h2>
	<h3>登録情報</h3>
	<div class="col-lg-4">
		<div class="profile-show-image">
			<%= attachment_image_tag @user, :image, :fill, 300, 300, fallback: "no_profile.jpg", size: "300x300" %>
		</div>
	</div>
	<div class="col-lg-8">
		<table class="table">
				<tr>
					<td>名前</td>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<td>会社名</td>
					<td><%= @user.company %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @user.phonenumber %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @user.postcode %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @user.address %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<td></td>
					<td><%= render 'users/follow_form', user: @user %></td>
				</tr>
			</tbody>
		</table>
		<% if user_signed_in? && current_user == @user %>
			<%= link_to "編集する",edit_user_path(@user), class:"btn btn-success" %>
			<%= link_to "サービスを登録する", new_service_path, class:"btn btn-warning" %>
		<% end %>
	</div>


</div>